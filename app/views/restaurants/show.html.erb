<h1><%= @restaurant.name %></h1>
<h2><%= @restaurant.category %></h2>
<p><%= link_to 'Add a review', new_restaurant_review_path(@restaurant.id) %></p>
<% @reviews.each do |review| %>
<p><%=review.content%> | <%=review.rating%>/5</p>
<% end %>
<p><%= link_to 'Back to restaurants', restaurants_path %></p>
